{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": ["src/global.d.ts", "dev-dist", "src/modules/supabase/types.ts"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "globals": ["chrome"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "off",
        "useImportExtensions": "off",
        "useJsxKeyInIterable": "off",
        "noUndeclaredDependencies": { "level": "off" }
      },
      "suspicious": {
        "noConsole": "off"
      },
      "style": {
        "noDefaultExport": "off",
        "noNamespaceImport": "off",
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"],
            "requireAscii": true
          }
        },
        "useNamingConvention": "off"
      },
      "complexity": {
        "noVoid": "off"
      },
      "nursery": {
        "useSortedClasses": "error"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
