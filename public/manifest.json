{
  "manifest_version": 3,
  "name": "solid-side",
  "version": "1.0",
  "description": "",
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "src/service-worker.ts"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["scripting", "tabs", "activeTab", "contextMenus", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  }
}
